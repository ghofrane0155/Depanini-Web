{% extends "Front/base.html.twig" %}
{% block bc %}
	<div class="container-fluid bg-primary py-5 bg-header" style="margin-bottom: 90px;">
		<div class="row py-5">
			<div class="col-12 pt-lg-5 mt-lg-5 text-center">
				<h1 class="display-4 text-white animated zoomIn">Reclamation</h1>
				<a href="" class="h5 text-white">Home</a>
				<i class="far fa-circle text-white px-2"></i>
				<a href="" class="h5 text-white">About</a>
			</div>
		</div>
	</div>
{% endblock %}
{% block home %}
	class="nav-item nav-link "
{% endblock %}
{% block about %}
	class="nav-item nav-link "
{% endblock %}
{% block events %}
	class="nav-item nav-link "
{% endblock %}


{% block contact %}
	class="nav-item nav-link active"
{% endblock %}
{% block body %}

	<!-- About Start -->
	<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
		<div class="container py-5">
			<div class="row g-5">
			<!-- Reclamation Form Start -->
			<div class="bg-light rounded p-5">
				{% if app.session.flashBag.has('success') %}
					{% set successMessages = app.session.flashBag.get('success') %}
					{% if successMessages|length > 0 %}
						<div class="alert alert-success" id="success-message">
							{{ successMessages[0] }}
						</div>
						<script>
							setTimeout(function () {
									document.getElementById("success-message").style.display = "none";
							}, 5000); // 5000 milliseconds = 5 seconds
						</script>
					{% endif %}
				{% endif %}
				<div class="section-title section-title-sm position-relative pb-3 mb-4">
					<h3 class="mb-0">Leave A Reclamation</h3>
				</div>
				{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
				<div class="row g-3">
			
					<div class="col-12">
						{{ form_label(form.type) }}
						{{ form_widget(form.type, { 'attr': {'class': 'form-control bg-white border-0', 'placeholder': 'Reclamation Type', 'style': 'height: 55px;'} }) }}
						{{ form_errors(form.type) }}
						<!-- Display errors for the "type" field -->
					</div>
					<div class="col-12">
						{{ form_label(form.description) }}
						{{ form_widget(form.description, { 'attr': {'class': 'form-control bg-white border-0', 'placeholder': 'Reclamation Description', 'style': 'height: 55px;'} }) }}
						{{ form_errors(form.description) }}
						<!-- Display errors for the "description" field -->
					</div>

					<div class="col-12">
						{{ form_label(form.pieceJointe) }}
						{{ form_widget(form.pieceJointe, { 'attr': {'class': 'form-control bg-white border-0', 'style': 'height: 55px;'} }) }}
						{{ form_errors(form.pieceJointe) }}
						<!-- Display errors for the "pieceJointe" field -->
					</div>


				</div>
				{{ form_end(form) }}
			</div>
			<!-- Reclamation Form End -->
		</div>
	</div>
	<!-- About End -->

{% endblock %}
{% block js %}

	<!-- JavaScript Libraries -->
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="{{asset('Front/lib/wow/wow.min.js')}}"></script>
	<script src="{{asset('Front/lib/easing/easing.min.js')}}"></script>
	<script src="{{asset('Front/lib/waypoints/waypoints.min.js')}}"></script>
	<script src="{{asset('Front/lib/counterup/counterup.min.js')}}"></script>
	<script src="{{asset('Front/lib/owlcarousel/owl.carousel.min.js')}}"></script>

	<!-- Template Javascript -->
	<script src="{{asset('Front/js/main.js')}}"></script>


{% endblock %}

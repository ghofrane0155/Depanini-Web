{% extends 'Back/base.html.twig' %}
        {% block Dashboard %} class="sm_menu_btm" {% endblock %}
        {% block Confidentialite%} class="sm_menu_btm" {% endblock %}
        {% block Profile%} class="sm_menu_btm" {% endblock %}
        {% block Users%} class="active open" {% endblock %}
        {% block Recrutements%} class="sm_menu_btm" {% endblock %}
        {% block Events%} class="sm_menu_btm" {% endblock %}
        {% block Reclamation%} class="sm_menu_btm" {% endblock %}    
        {% block Achats%} class="sm_menu_btm" {% endblock %}

{% block title %}Les postes de travail{% endblock %}

{% block body %}
<section class="content home">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row clearfix">
                <div class="col-lg-5 col-md-5 col-sm-12">
                    <h2>Recrutements</h2>
                    <ul class="breadcrumb padding-0">
                        <li class="breadcrumb-item"><a href="{{asset('dashboardhome')}}"><i class="zmdi zmdi-home"></i></a></li>
                        <li class="breadcrumb-item active">Recrutements</li>
                    </ul>
                </div>            
                <div class="col-lg-7 col-md-7 col-sm-12">
                    <div class="input-group m-b-0">                
                        <input type="text" class="form-control" placeholder="Search...">
                        <span class="input-group-addon">
                            <i class="zmdi zmdi-search"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
     <!-- Hover Rows -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>Liste des postes de travail</h2>
                        
                    </div>
                    <div class="body table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>id</th>
                                    <th>Nom de l'entreprise</th>
                                    <th>Poste de travail</th>
                                    <th>Salaire</th>
                                    <th>Date de publication</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for recrutement in recrutements %}
                                <tr>
                                    <th scope="row">{{recrutement.reference}}</th>
                                    <td>{{recrutement.nom}}</td>
                                    <td>{{recrutement.description}}</td>
                                    <td>{{recrutement.salaire}}</td>

                                    <td>{{recrutement.date|date('d/m/Y')}}</td>
                                    <td><a href="{{path('supp_recrutement',{'id':recrutement.reference} )}}"><i class="zmdi zmdi-delete"></i></a></td>
                                </tr>
                            {% endfor %} 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
     <!-- #END# Hover Rows --> 
     
    </div>
</section>

{% endblock %}

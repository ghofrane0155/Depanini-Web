{% block body %}

   
	
    <section class="content home">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row clearfix">
                <div class="col-lg-5 col-md-5 col-sm-12">
                    <h2>Tickets</h2>
                    <ul class="breadcrumb padding-0">
                        <li class="breadcrumb-item"><a href="{{asset('EventsController')}}"><i class="zmdi zmdi-home"></i></a></li>
                        <li class="breadcrumb-item active">Tickets</li>
                    </ul>
                </div>            
                <div class="col-lg-7 col-md-7 col-sm-12">
                    <div class="input-group m-b-0">                
                        <input type="text" class="form-control" placeholder="Search...">
                        <span class="input-group-addon">
                            <i class="zmdi zmdi-search"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
<!-- ***************************************************************************************************************-->
<!-- Hover Rows -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>Tickets list</h2>
                        
                    </div>
                        <table class="table table-hover">
                            <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                <thead>
                                        <th>ID TICKET</th>
                                        <th>EVENT'S NAME</th>
                                        <th>LOGIN</th>
                                        <th>QUANTITY</th>
                                        <th>TOTAL PRICE</th>
                                        <th></th>
                                </thead>
                                <tbody>
                                {% for ticket in tickets %}
                                    <tr>
                                        <th scope="row">{{ ticket.idticket }}</th>
                                        <td>{{ ticket.idEvent.nomevent }}</td>
                                        <td>{{ ticket.idUser.login }}</td>
                                        <td>{{ ticket.quantite }}</td>
                                        <td>{{ ticket.prixtotale }}</td>
                                        
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Hover Rows --> 

    </div>
</section>
    
    
{% endblock %}

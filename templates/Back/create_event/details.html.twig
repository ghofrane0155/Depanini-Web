{% block body %}
<section class="content home">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row clearfix">
                <div class="col-lg-5 col-md-5 col-sm-12">
                    <h2>Dashboard</h2>
                    <ul class="breadcrumb padding-0">
                        <li class="breadcrumb-item"><a href="{{asset('dashboardhome')}}"><i class="zmdi zmdi-home"></i></a></li>
                        <li class="breadcrumb-item active">Events/Datails</li>
                    </ul>
                </div>            
                <div class="col-lg-7 col-md-7 col-sm-12">
                    <div class="input-group m-b-0">                
                        <input type="text" class="form-control" placeholder="Search...">
                        <span class="input-group-addon">
                            <i class="zmdi zmdi-search"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>

<!-- ***************************************************************************************************************-->
    <!-- form create event -->

        <div class="wrapper wrapper--w960" >
            <div class="card card-2">
                <div class="card-heading"></div>
                <div class="card-body">
                    <h2 class="title">Details of {{event.nomevent}}</h2>
                    {{form_start(form,{'attr': {'novalidate':'novalidate','disabled': 'disabled'}})}}
                        <div class="row row-space">
                                <div class="col-6">
                                        <div class="input-group">
                                            <h4>Event Title:</h4>
                                            {{ form_widget(form.nomevent, { 'attr': {'disabled': 'disabled'} }) }}
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group"><h4 >Event Organiser:</h4>
                                            {{ form_widget(form.organisateurevent, { 'attr': {'disabled': 'disabled'} }) }}
                                        </div>
                                    </div>
                        </div>

                        <div class="row row-space">
                            <div class="col-6">
                                    <div class="input-group"><h4 >Limited Number:</h4>
                                        {{ form_widget(form.nombrelimevent, { 'attr': {'disabled': 'disabled'} }) }}
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="input-group" ><h4 >Price:</h4>
                                        {{ form_widget(form.prixevent, { 'attr': {'disabled': 'disabled'} }) }}
                                    </div>
                                </div>
                    </div>

                        

                        <div class="row row-space">
                            <div class="col-6">
                                <div class="input-group"><h4 >first Day:</h4>
                                {# <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i> #}
                                    {{ form_widget(form.datedebutevent, { 'attr': {'disabled': 'disabled'} }) }}                                    
                                </div>
                            </div>
                            <div class="col-6">
                                    <div class="input-group"><h4 >last Day:</h4>
                                    {# <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>  #}
                                        {{ form_widget(form.datefinevent, { 'attr': {'disabled': 'disabled'} }) }}                                       
                                    </div>
                            </div>
                        </div>
                        

                        <div class="row row-space">
                            

                            <div class="col-6">
                                <div class="input-group"><h4 >Place:</h4>
                                    {{ form_widget(form.lieuevent, { 'attr': {'disabled': 'disabled'} }) }}
                                </div>
                            </div>
                        </div>
                            <div class="col-6">
                                <div class="input-group"><h4 >Description:</h4>
                                    {{ form_widget(form.descriptionevent, { 'attr': {'disabled': 'disabled'} }) }}
                                </div>
                            </div>
                       
                    {{form_end(form )}}
                </div>
            </div>
            </div>
        </div>
    <!-- END form create event -->
     
    </div>
</section>


<!DOCTYPE html>

<title>Feedbacks index</title>

{% block body %}
    <h1>Feedbacks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdFeedback</th>
                <th>Commentaire</th>
                <th>Date</th>
                <th>Stars</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feedback in feedbacks %}
            <tr>
                <td>{{ feedback.idFeedback }}</td>
                <td>{{ feedback.commentaire }}</td>
                <td>{{ feedback.date ? feedback.date|date('Y-m-d') : '' }}</td>
                <td>{{ feedback.stars }}</td>
                <td>
                    <a href="{{ path('app_feedbacks_show', {'idFeedback': feedback.idFeedback}) }}">show</a>
                    <a href="{{ path('app_feedbacks_edit', {'idFeedback': feedback.idFeedback}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_feedbacks_new') }}">Create new</a>
{% endblock %}
